{
  "kind": "collectionType",
  "collectionName": "order_items",
  "info": {
    "singularName": "order-item",
    "pluralName": "order-items",
    "displayName": "Order Item",
    "description": "Items in an order"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order",
      "inversedBy": "order_items",
      "required": true
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "required": false
    },
    "product_name": {
      "type": "string",
      "required": true
    },
    "product_sku": {
      "type": "string"
    },
    "quantity": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "unit_price": {
      "type": "decimal",
      "required": true
    },
    "total_price": {
      "type": "decimal",
      "required": true
    }
  }
}