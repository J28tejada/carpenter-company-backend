{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "short_description": {
      "type": "string"
    },
    "description": {
      "type": "blocks"
    },
    "price": {
      "type": "decimal"
    },
    "original_price": {
      "type": "integer",
      "default": 0
    },
    "sku": {
      "type": "string"
    },
    "stock_quantity": {
      "type": "integer",
      "default": 0
    },
    "min_stock_level": {
      "type": "integer",
      "default": 5
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "product"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "attributes": {
      "type": "json"
    },
    "rating": {
      "type": "decimal",
      "required": false,
      "default": 0,
      "min": 0,
      "max": 5
    },
    "reviews": {
      "type": "integer",
      "required": false,
      "default": 0,
      "min": 0
    }
  }
}
